<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= link_to users_path(user) do %>
          <%= profile_img(user) %><br>
          <%= user.email %><br>
          <%= "詳細" %>
        <% end %>
        <% unless user.id == current_user.id %>
          <%= render 'follow_form', user: user %>
        <% end %>
      </div>
  <% end %>
</div>
